<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6">

      <h3>Profile</h3>
      <table class="table table-bordered">
        <img src="<%= @user.picture %>" alt="profile-picture" class="avatar">
        <tbody>
          <thead>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Email</th>
            <th>Phone Number</th>
          </thead>
            <tr>
              <td><%= @user.first_name %></td>
              <td><%= @user.last_name %></td>
              <td><%= @user.address %></td>
              <td><%= @user.email %></td>
              <td><%= @user.phone_number %></td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
