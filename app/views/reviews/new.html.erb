<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6">

    <h3>Add a Review</h3>


    <%= simple_form_for [@user, @review] do |f| %>
      <%= f.input :rate, collection: 0..5, include_blank: false %>
      <%= f.input :content %>
      <%= f.submit "add a review", class: "btn btn-primary" %>
    <% end %>

    </div>
  </div>
</div>
