<div class="container cont-bordered">
  <div class="row">

    <div class="">
    <div class="col-md-8 col-md-offset-2">
      <div class="search-bar input-group">
          <%= form_tag games_path, class: 'form-search ', id: 'search-bar' , method: :get do %>
          <%= text_field_tag :query,
          params[:query],
         class: "form-control",
         placeholder: "Find a game"
         %>
       <% end %>
        <span class="input-group-addon " id="basic-addon2">&#x1F50D;</span>
      </div>

  </div>

    <% @games.each do |game| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <div class="card-trip">
            <%= link_to "", game_path(game), class: 'card-link'%>

          <img src="<%=game.photo%>">

          <div class="card-trip-infos">
            <div class="card-text">
              <br>
              <h2><%=game.name%></h2>
              <br>
              <p><%=game.description%></p>
            </div>
            <i><h2 class="card-trip-pricing btn-price-card">
              <%= number_with_precision(game.price, :precision => 2) %>â‚¬</h2></i>
            <%= link_to "", game_path(game), class: 'card-link'%>
            <img src="<%=game.user.photo%>" class="card-trip-user avatar-bordered"/>
          </div>
        </div>
      </div>
    <% end %>

     <div class="col-xs-12 col-md-12">
      <h1>Games in a map</h1>
      <div
         id="map"
         style="width: 100%;
         height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>

  </div>
  </div>
</div>

