<div class="container ">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3 cont-bordered more_padding">
      <h1>Sell a game</h1>

      <%= simple_form_for @game do |f| %>
        <%= f.input :name, class: 'bg-secondary' %>
        <%= f.input :description %>
        <%= f.input :price, input_html: { min: '0', step: 'any' }  %>
        <%= f.input :state, collection: User::STATES, prompt: :translate %>
        <%= f.input :photo %>

        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
